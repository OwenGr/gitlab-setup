{
  "variables": {
    "aws_region": "us-west-2"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region":     "{{ user `aws_region` }}",
      "source_ami": "ami-6e1a0117",
      "instance_type": "m4.large",
      "ssh_username": "ubuntu",
      "ami_name": "gitlab-{{isotime \"2006-01-02-15-04-05\"}}",
      "ami_description": "Gitlab CE",
      "vpc_id": "vpc-5fe4b63b",
      "subnet_id": "subnet-db019aad",
      "associate_public_ip_address": true,
      "tags": {
        "application": "gitlab",
        "version": "9.4.3",
        "os": "ubuntu",
        "os_release": "16.04"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "ansible-local",
      "extra_arguments": ["-vv"],
      "playbook_dir": "ansible",
      "group_vars": "ansible/group_vars",
      "inventory_groups": "gitlab",
      "playbook_file": "ansible/gitlab.yml",
      "role_paths": [
        "../roles/account",
        "../roles/aws",
        "../roles/network",
        "../roles/gitlab",
        "../roles/locales",
        "../roles/network",
        "../roles/nfs",
        "../roles/packages",
        "../roles/python",
        "../roles/sshd"
      ]
    }
  ]
}
